!!! Strict
%html{ 'xml:lang' => 'en-us', :lang => 'en-us', :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %title= title :site => Collective.title
    %meta{ :content => 'text/html; charset=utf-8', 'http-equiv' => "content-type" }/
    = css_include_tag :reset, :master, *Collective.stylesheets
  %body
    #header
      #account= link_to_login_or_account
      #branding
        %h1= Collective.title
      %ul#navigation
        %li= highlighted_link_to 'New Page', url(:new_page)
        %li= highlighted_link_to 'All Pages', url(:pages)
        %li= highlighted_link_to 'Home', url(:home)
    / - flash.each do |type, message|      
    /   #notice{ :class => type }
    /     %p= message
    #content
      = catch_content :for_layout
    #sidebar
      = part RecentUpdatesPart => :index
    #footer
      %p
        = Collective.footer
        | Wiki powered by
        %a{ :href => 'http://github.com/meekish/collective' } Collective
    = js_include_tag :jquery, 'jquery-corner', 'chili/chili.pack.js', :application
    %script{ :type => 'text/javascript' }
      ChiliBook.recipeFolder = "/javascripts/chili/recipes/";
      ChiliBook.stylesheetFolder = "/stylesheets/chili/styles/";
